<Window
  x:Class="NNS_Z.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="ニコ生サーチ(雑)"
  Width="{Binding Setting.Window.Width, Mode=TwoWay}"
  Height="{Binding Setting.Window.Height, Mode=TwoWay}"
  Left="{Binding Setting.Window.Left, Mode=TwoWay}"
  Top="{Binding Setting.Window.Top, Mode=TwoWay}">
  <Window.Resources>
    <Storyboard x:Key="MyStoryboard">
      <DoubleAnimation
        RepeatBehavior="Forever"
        Storyboard.TargetName="rectangle"
        Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
        To="1"
        Duration="0:5:0" />
      <!--  Duration変更時はMainWindow.xaml.csのtimer.Intervalも変えること  -->
    </Storyboard>
  </Window.Resources>
  <Grid>
    <Rectangle
      Name="rectangle"
      Height="5"
      VerticalAlignment="Top">
      <Rectangle.Fill>
        <SolidColorBrush Color="{Binding Setting.Color.Progress}" />
      </Rectangle.Fill>
      <Rectangle.RenderTransform>
        <ScaleTransform ScaleX="0" ScaleY="1" />
      </Rectangle.RenderTransform>
    </Rectangle>
    <WebBrowser
      x:Name="browser"
      Margin="0,5,0,0"
      LoadCompleted="LoadCompleted"
      Navigated="Navigated"
      Navigating="Navigating" />
  </Grid>
</Window>
